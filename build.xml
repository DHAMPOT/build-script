# make clean
rm -rf out/target/product/platina

# Telgram env setup
export BOT_MSG_URL="https://api.telegram.org/bot"$BOT_API"/sendMessage"

tg_post_msg() {
 curl -s -X POST "$BOT_MSG_URL" -d chat_id="-1001521554007" \
 -d "parse_mode=html" \
 -d text="$1"
}

tg_post_msg "STARTING BUILD Xperience" "$CHATID"
# build rom
. build/envsetup.sh
lunch xperience_platina-eng
export SELINUX_IGNORE_NEVERALLOWS=true
export SKIP_API_CHECK=true
export SKIP_ABI_CHECK=true
export TZ=Asia/Jakarta
export CCACHE_DIR=~/ccachexpe
export CCACHE_EXEC=$(which ccache)
export USE_CCACHE=1
ccache -M 10G
ccache -z

up(){
	curl --upload-file $1 https://transfer.sh/$(basename $1); echo
}

make bacon -j$(nproc --all) \
	send_zip=$(up out/target/product/platina/*zip) && tg_post_msg "Build Succeed!
$send_zip" "$CHATID" \
	|| tg_post_msg "Build Failed, @TacticalDad please check console" "$CHATID" && ccache -s
	
ccache -s

