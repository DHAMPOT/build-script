# make clean
rm -rf out/target/product/platina

# Telgram env setup
export BOT_MSG_URL="https://api.telegram.org/bot"$BOT_API"/sendMessage"

tg_post_msg() {
 curl -s -X POST "$BOT_MSG_URL" -d chat_id="-1001521554007" \
 -d "parse_mode=html" \
 -d text="$1"
}

repo init --depth=1 --no-repo-verify -u https://github.com/CAF-Extended/manifest -b 11.0 -g default,-device,-mips,-darwin,-notdefault
git clone https://github.com/D4rkKnight21/local_manifest --depth 1 -b cafex .repo/local_manifests
tg_post_msg "STARTING SYNC CAF-EXTENDED" "$CHATID"
repo sync -c --no-clone-bundle --no-tags --optimized-fetch --prune --force-sync -j8

# build rom
. build/envsetup.sh
lunch cafex_platina-userdebug
tg_post_msg "STARTING BUILD" "$CHATID"
export SELINUX_IGNORE_NEVERALLOWS=true
export ALLOW_MISSING_DEPENDENCIES=true
export SKIP_API_CHECK=true
export SKIP_ABI_CHECK=true
export TZ=Asia/Jakarta
export CCACHE_DIR=~/ccachecaf
export CCACHE_EXEC=$(which ccache)
export USE_CCACHE=1
ccache -M 10G
ccache -z

up(){
	curl --upload-file $1 https://transfer.sh/$(basename $1); echo
}

m cafex -j$(nproc --all)

send_zip=$(up out/target/product/platina/*zip) 

tg_post_msg "Build Succeed! $send_zip" "$CHATID"

ccache -s

rm -rf .repo/local_manifests
